<!--pages/address/address.wxml-->
<!-- 订单页面 -->
<cu-custom bgColor="bg-yellow" isCustom="{{true}}">
    <view slot="content">地址管理</view>
</cu-custom>
<view class="container">
  <view class="order-title">订单详情</view>
  <view class="order-info">
    <view class="order-item">
      商品名称：
      <text class="order-value">{{order.name}}</text>
    </view>
    <view class="order-item">
      商品价格：
      <text class="order-value">{{order.price}}</text>
    </view>
    <view class="order-item">
      购买数量：
      <text class="order-value">{{order.quantity}}</text>
    </view>
    <view class="order-item">
      订单金额：
      <text class="order-value">{{order.amount}}</text>
    </view>
    <button class="order-button">立即支付</button>
  </view>
</view>
